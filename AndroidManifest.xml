<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crazyc"
    android:versionCode="4"
    android:versionName="1.0.0.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logocc"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.crazyc.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.crazyc.MainMenu"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name="com.crazyc.Game"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="com.crazyc.EndOfGame"
            android:label="@string/title_activity_end_of_game" >
        </activity>
        <activity
            android:name="com.crazyc.OptionControl"
            android:label="@string/title_activity_option_control" >
        </activity>
        <activity
            android:name="com.crazyc.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="com.crazyc.Loading"
            android:label="@string/title_activity_loading" >
        </activity>
    </application>

</manifest>